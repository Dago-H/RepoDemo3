pipeline{
    agent any

    environment {
        DOCKER_IMAGE = 'cursodvops/jenkinsexample'
    }

    trigger{
        githubPush()
    }
    stages{
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Dago-H/RepoDemo3.git'
            }
        }
    stage('Build') {
            steps {
                script{
                    docker.build(DOCKER_IMAGE)
                } 
                //bat 'echo "Building the project..."'
            }
        }
    }
}